public class word_puzzle
{
	public word_puzzle()
	{ 
		String[][] my_table = new String[][] {
				{"t", "h", "i", "s"},
				{"w", "a", "t", "s"},
				{"o", "a", "h", "g"},
				{"f", "g", "d", "t"} };
	}
	int[][] find_word(String word)
	{
		int row_column_length = 4;
		int[][] Word = new int[2][2];
		for(int x = 0; x < row_column_length; x++)
		{
			for(int y = 0; y < row_column_length; y++)
			{
				if(my_table[x][y] == word.charAt(0))
				{
					
				}
			}
		}
		return Word;
	}
}